{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>gameDate</th>
                <td>{{ game.gameDate ? game.gameDate|date('Y-m-d') : '' }}</td>
