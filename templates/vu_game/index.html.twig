{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th>Id</th>
                <th>gameDate</th>
                <th>ScorePlayer1</th>
                <th>ScorePlayer2</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.gameDate ? game.gameDate|date('Y-m-d') : '' }}</td>
                <td>{{ game.scorePlayer1 }}</td>
                <td>{{ game.scorePlayer2 }}</td>
                <td>{{ game.status }}</td>
                <td>
                    <a href="{{ path('app_vu_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_vu_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vu_game_new') }}">Create new</a>
{% endblock %}
