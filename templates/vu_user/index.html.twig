{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Username</th>
                <th>emailAdress</th>
                <th>Password</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.emailAdress }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.status }}</td>
                <td>
                    <a href="{{ path('app_vu_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_vu_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vu_user_new') }}">Create new</a>
    
{% endblock %}
