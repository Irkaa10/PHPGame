        </tbody>
    </table>
    <div class="btn-group">
    <a href="{{ path('app_vu_user_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_vu_user_edit', {'id': user.id}) }}" class="btn btn-secondary">edit</a>
