{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
    <h1>Tournament</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>TournamentName</th>
                <td>{{ tournament.tournamentName }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ tournament.startDate ? tournament.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ tournament.endDate ? tournament.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ tournament.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tournament.description }}</td>
            </tr>
            <tr>
                <th>MaxParticipants</th>
                <td>{{ tournament.maxParticipants }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ tournament.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Game</th>
                <td>{{ tournament.game }}</td>
            </tr>
            <tr>
                <th>Organizer</th>
                <td>{{ tournament.organizer }}</td>
            </tr>
            <tr>
                <th>Winner</th>
                <td>{{ tournament.winner }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_vu_tournament_index') }}">back to list</a>

    <a href="{{ path('app_vu_tournament_edit', {'id': tournament.id}) }}">edit</a>

    {{ include('vu_tournament/_delete_form.html.twig') }}
{% endblock %}
